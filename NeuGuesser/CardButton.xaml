<UserControl x:Class="NeuGuesser.CardButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeuGuesser"
             mc:Ignorable="d"     BorderThickness="1" Width="80">
    <StackPanel Orientation="Vertical" Margin="10">
        <Label   HorizontalAlignment="Center" HorizontalContentAlignment="Center" x:Name="label" 
                 Content="Label"   Height="30" FontSize="19"
                 MouseDown="label_MouseDown"
                 />
        <StackPanel Orientation="Horizontal">
            <Label Foreground="Green" Width="25" HorizontalAlignment="Center" HorizontalContentAlignment="Center" x:Name="statusTh" Content="11"   Height="30" />
            <Label Foreground="Red" Width="25" HorizontalAlignment="Center" HorizontalContentAlignment="Center" x:Name="statusPick" Content="11"   Height="30" />
        </StackPanel>
 
      
        <Label Background="Yellow" HorizontalAlignment="Center" HorizontalContentAlignment="Center" x:Name="safety" Content="Label"   Height="30" />


    </StackPanel>
</UserControl>
